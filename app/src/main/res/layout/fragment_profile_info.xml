<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:background="@drawable/back"
              android:backgroundTint="@android:color/black"
              android:orientation="vertical"
             tools:context="fh_swf.mechatronik.fragments.ProfileInfoFragment">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <TextView
                    android:text="IP/ID"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:maxLines="1"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textViewIP_IDStatic"/>
            <TextView
                    android:text="00:80:41:ae:fd:7e"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/textViewIP_ID"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp">
            <TextView
                    android:text="Profil"
                    android:autoSizeTextType="uniform"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:id="@+id/textViewProfileStatic"/>
            <TextView
                    android:text="HEXAPOD"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:layout_weight="0.6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/textViewProfile"/>
        </LinearLayout>
    </LinearLayout>
