<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:background="@android:color/black"
              android:layout_height="match_parent"
              tools:context="fh_swf.mechatronik.fragments.MGroupFragment">

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/radioGroupM1_M3"
            android:layout_marginRight="5dp">
        <RadioButton
                android:text="@string/m1"
                android:background="@drawable/radio_button_background"
                android:button="@android:color/transparent"
                android:layout_margin="@dimen/margin_custom"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/M1" android:layout_weight="1"/>
        <RadioButton
                android:text="@string/m2"
                android:background="@drawable/radio_button_background"
                android:button="@android:color/transparent"
                android:layout_margin="@dimen/margin_custom"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/M2" android:layout_weight="1"/>
        <RadioButton
                android:text="@string/m3"
                android:background="@drawable/radio_button_background"
                android:button="@android:color/transparent"
                android:layout_margin="@dimen/margin_custom"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/M3" android:layout_weight="1"/>
    </RadioGroup>
</LinearLayout>
