<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="fh_swf.mechatronik.fragments.PlayPauseFragment"
              android:background="@android:color/black">

    <ImageButton
            android:src="@android:drawable/ic_media_play"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" android:id="@+id/imageButtonPlay"
            android:layout_margin="@dimen/margin_play_pause"
            android:background="@color/black_overlay"
    />
    <ImageButton
            android:src="@android:drawable/ic_media_pause"
            android:layout_margin="@dimen/margin_play_pause"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" android:id="@+id/imageButtonPause"
            android:background="@color/black_overlay"/>
</LinearLayout>
