<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context="fh_swf.mechatronik.fragments.SliderFragment">

        <TextView
                android:text="GLIDER_AS"
                android:textColor="@android:color/white"
                android:textSize="@dimen/glider_text_size"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"/>
        <SeekBar
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:thumbOffset="0dp"
                android:id="@+id/glider_AS"
                android:layout_marginBottom="@dimen/_5sdp"
                android:progressDrawable="@drawable/progress_draw"
                android:thumb="@drawable/thumb_draw"
                android:layout_gravity="center"
                android:max="200"/>
        <TextView
                android:text="GLIDER_AZ"
                android:textColor="@android:color/white"
                android:textSize="@dimen/glider_text_size"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView5"/>
        <SeekBar
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:thumbOffset="0dp"
                android:progressDrawable="@drawable/progress_draw"
                android:thumb="@drawable/thumb_draw"
                android:id="@+id/glider_AZ"
                android:layout_gravity="center"
                android:max="200"/>

</LinearLayout>
